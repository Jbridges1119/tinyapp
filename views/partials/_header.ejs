<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="ml-auto form-inline navbar-nav">
        <%if (!username){%>
          <form class="ml-auto form-inline" method="POST" action="/login">
            <a class="nav-item nav-link" href="/login">Login</a>
          </form>
          <form class="form-inline" method="POST" action="/register">
            <a class="nav-item nav-link" href="/register">Register</a>
          </form>
          <%} else if (username['email']) {%>
            <form class="ml-auto form-inline " method="POST" action="/logout">
              <h5 class="navbar-nav">Logged In As: <%= username["email"] %>!</h5>
              <button class="btn btn-outline-dark" style="margin-left: 1em">Logout</button>
            </form>
            <%}%>
      </div>
    </div>
  </nav>

</header>